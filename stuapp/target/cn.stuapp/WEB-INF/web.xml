<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>cn.stuapp.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ModifyInformationServlet</servlet-name>
    <servlet-class>cn.stuapp.servlet.ModifyInformationServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>ClassServlet</servlet-name>
  <servlet-class>cn.stuapp.servlet.ClassServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GradeServlet</servlet-name>
    <servlet-class>cn.stuapp.servlet.GradeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChooseClassServlet</servlet-name>
    <servlet-class>cn.stuapp.servlet.ChooseClassServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/loginjudge</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ModifyInformationServlet</servlet-name>
    <url-pattern>/modifyinfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ClassServlet</servlet-name>
    <url-pattern>/displayclass</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GradeServlet</servlet-name>
    <url-pattern>/displaygrade</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChooseClassServlet</servlet-name>
    <url-pattern>/chooseclass</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
